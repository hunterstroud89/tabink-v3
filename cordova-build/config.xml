<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tabink.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tabink</name>
    <description>Offline-first productivity app for Android tablets</description>
    <author email="dev@tabink.com" href="https://github.com/hunterstroud89/tabink-v3">
        Tabink
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <preference name="Fullscreen" value="true" />
    
    <platform name="android">
        <icon src="res/app-icon.png" />
        <splash src="res/splash-screen.png" />
        <preference name="SplashScreenDelay" value="2000" />
        <preference name="FadeSplashScreenDuration" value="500" />
    </platform>
</widget>
